---
interface Props {
	items: string;
}

const { items } = Astro.props;
---

<nav>
	<a href="/" id="title">Ranked VTOL VR<br />Headless Server</a>
	<slot />
	<div>
		{JSON.parse(items).map((i: any) => <a href={i[1]}>{i[0]}</a>)}
	</div>
</nav>

<style>
	nav {
		width: 100%;
		height: 75px;

		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		box-sizing: border-box;
		padding: 0 150px;
	}

	a#title {
		color: #FFFFFF;
		font-weight: 900;
	}

	a {
		font-family: Satoshi, system-ui;
		color: #a8a8a8;
		text-decoration: none;
		font-size: 24px;
		font-weight: 500;
		transition-duration: 0.5s;
	}

	a:hover {
		color: #FFFFFF;
	}

	div {
		display: flex;
		flex-direction: row;
		gap: 30px;
		padding: 15px;
	}
</style>
